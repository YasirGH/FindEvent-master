<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".LoginActivity">

<LinearLayout
    android:id="@+id/linearLayoutTop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0071b9"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FindAnEvent : connexion"
        android:textColor="#ffffff"
        android:textSize="20dp" />
</LinearLayout>

<LinearLayout
    android:id="@+id/linearLayoutBarreMail"
    android:layout_width="250dp"
    android:layout_height="2dp"
    android:layout_below="@+id/editText_user"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="-15dp"
    android:background="#0071b9"
    android:orientation="vertical">

</LinearLayout>

<EditText
    android:id="@+id/editText_user"
    android:layout_width="250dp"
    android:layout_height="40dp"
    android:layout_above="@+id/editText_pass"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="15dp"
    android:background="#ffffff"
    android:drawableLeft="@drawable/ic_action_user"
    android:drawableTint="#666666"
    android:ems="10"
    android:hint="User"
    android:inputType="text"
    android:textColor="#666666"
    android:textColorHint="#666666"
    android:textColorLink="#0071b9"
    android:textCursorDrawable="@null"
    android:textSize="16dp" />

<LinearLayout
    android:layout_width="250dp"
    android:layout_height="2dp"
    android:layout_below="@+id/editText_pass"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="-50dp"
    android:background="#0071b9"
    android:orientation="vertical">

</LinearLayout>

<EditText
    android:id="@+id/editText_pass"
    android:layout_width="250dp"
    android:layout_height="40dp"
    android:layout_above="@+id/cardView_se_connecter"
    android:layout_alignStart="@+id/editText_user"
    android:layout_marginBottom="50dp"
    android:background="#ffffff"
    android:cursorVisible="false"
    android:drawableLeft="@drawable/ic_action_pass"
    android:drawableTint="#666666"
    android:ems="10"
    android:hint="Mot de passe"
    android:inputType="textPassword"
    android:textColor="#666666"
    android:textColorHint="#666666"
    android:textColorLink="#0071b9"
    android:textCursorDrawable="@null" />

<android.support.v7.widget.CardView
    android:id="@+id/cardView_se_connecter"
    android:layout_width="200dp"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="150dp"
    app:cardBackgroundColor="#0071b9"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_se_connecter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Se connecter"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

<TextView
    android:id="@+id/textView_enregistrement"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="100dp"
    android:text="Pas de compte ? Enregistrez vous ici >>>"
    android:textSize="16dp" />

</RelativeLayout>

